                <MenuItem Header="Customer" IsCheckable="False" FontSize="12" Click="Open_wCustomer_Click">
                </MenuItem>
                <MenuItem Header="Review" IsCheckable="False" FontSize="12" Click="Open_wReview_Click">
                </MenuItem>
                <MenuItem Header="Order" IsCheckable="False" FontSize="12" Click="Open_wOrder_Click">
                </MenuItem>
                <MenuItem Header="OrderItem" IsCheckable="False" FontSize="12" Click="Open_wOrderItem_Click">
                </MenuItem>
                <MenuItem Header="Product" IsCheckable="False" FontSize="12" Click="Open_wProduct_Click">
                </MenuItem>
                <MenuItem Header="Vendor" IsCheckable="False" FontSize="12" Click="Open_wVendor_Click">
                </MenuItem>
            </MenuItem>

        </Menu>
    </Grid>
</Window>
