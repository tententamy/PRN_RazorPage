            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.Product.ProductName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review.Product.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review.Rating)
            </dt>
            <dd class="col-sm-10">
