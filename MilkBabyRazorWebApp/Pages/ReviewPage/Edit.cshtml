@page
@model MilkBabyRazorWebApp.Pages.ReviewPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Review</h1>

<div class="form-container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Review.ReviewId" />

        <div class="form-group">
            <label asp-for="Review.CustomerId" class="control-label">Customer</label>
            <select asp-for="Review.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            <span asp-validation-for="Review.CustomerId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Review.ProductId" class="control-label">Product</label>
            <select asp-for="Review.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            <span asp-validation-for="Review.ProductId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Review.ReviewTitle" class="control-label">Review Title</label>
            <input asp-for="Review.ReviewTitle" class="form-control" />
            <span asp-validation-for="Review.ReviewTitle" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Review.ReviewText" class="control-label">Review Text</label>
            <input asp-for="Review.ReviewText" class="form-control" />
            <span asp-validation-for="Review.ReviewText" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Review.ReviewImg" class="control-label">Review Image</label>
            <input asp-for="Review.ReviewImg" class="form-control" />
            <span asp-validation-for="Review.ReviewImg" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Review.Rating" class="control-label">Rating</label>
            <input asp-for="Review.Rating" class="form-control" />
            <span asp-validation-for="Review.Rating" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Review.ReviewHelpfulCount" class="control-label">Helpful Count</label>
            <input asp-for="Review.ReviewHelpfulCount" class="form-control" />
            <span asp-validation-for="Review.ReviewHelpfulCount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Review.ReviewNotHelpfulCount" class="control-label">Not Helpful Count</label>
            <input asp-for="Review.ReviewNotHelpfulCount" class="form-control" />
            <span asp-validation-for="Review.ReviewNotHelpfulCount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <span class="separator"></span>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.querySelector("form").addEventListener("submit", function (e) {
            const rating = document.querySelector('input[name="Review.Rating"]').value;

            if (rating < 1 || rating > 5) {
                e.preventDefault();
                alert("Rating must be between 1 and 5.");
            }
        });
    </script>
}
