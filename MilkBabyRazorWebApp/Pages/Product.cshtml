@page
@using MilkBabyData.Models
@model MilkBabyRazorWebApp.Pages.ProductModel

@{
    ViewData["Title"] = "Product page";
    var products = Model.Products;
}

<div class="text-center">
    <h1 class="display-6">Product management</h1>
</div>

<div class="row">
    <div class="col-md-12 text-end">
        <button type="button" class="btn btn-primary" onclick="add();">
            Add
        </button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="card-header">
                    <th class="card-title text-center">Name</th>
                    <th class="card-title text-center">Price</th>
                    <th class="card-title text-center">Quantity</th>
                    <th class="card-title text-center">Description</th>
                    <th class="card-title text-center">Date Start</th>
                    <th class="card-title text-center">Date End</th>
                    <th class="card-title text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="tblproductList">
                @if (products.Count > 0)
                {
                    foreach (var product in products)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.ProductPrice</td>
                            <td>@product.ProductQuantity</td>
                            <td>@product.ProductDescription</td>
                            <td>@product.ProductDateStart</td>
                            <td>@product.ProductDateEnd</td>
                            <td class="text-center">
                                <button type="button" class="btn btn-primary" onclick="edit('@product.ProductId')">Edit</button>
                                <form method="post" asp-page-handler="Delete" asp-route-id="@product.ProductId" onsubmit="return confirm('Are you sure you want to delete this product?');" style="display:inline;">
                         
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="currencyModal" tabindex="-1" aria-labelledby="currencyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("OnPost", "Product", FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="currencyModalLabel">Product Transaction</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ProductId">ID</label>
                                <input asp-for="product.ProductId" class="form-control"  />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ProductName">Name</label>
                                <input asp-for="product.ProductName" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ProductDescription">Description</label>
                                <input asp-for="product.ProductDescription" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ProductPrice">Price</label>
                                <input asp-for="product.ProductPrice" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ProductQuantity">Quantity</label>
                                <input asp-for="product.ProductQuantity" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ProductDateStart">Date Start</label>
                                <input asp-for="product.ProductDateStart" class="form-control" type="date" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ProductDateEnd">Date End</label>
                                <input asp-for="product.ProductDateEnd" class="form-control" type="date" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label>@Model.Message</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btSave" type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        function add() {
            $('#currencyModal').modal('show');
            $('#frm')[0].reset();
            $('#product_ProductId').val('');
        }

        function edit(productId) {
            $.ajax({
                url: '@Url.Page("Product", "GetProductById")',
                type: 'GET',
                data: { id: productId },
                success: function (data) {
                    $('#product_ProductId').val(data.productId);
                    $('#product_ProductName').val(data.productName);
                    $('#product_ProductDescription').val(data.productDescription);
                    $('#product_ProductPrice').val(data.productPrice);
                    $('#product_ProductQuantity').val(data.productQuantity);
                    $('#product_ProductDateStart').val(data.productDateStart.split('T')[0]);
                    $('#product_ProductDateEnd').val(data.productDateEnd.split('T')[0]);
                    $('#currencyModal').modal('show');
                }
            });
        }
    </script>
}
