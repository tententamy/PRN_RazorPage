@page
@model MilkBabyRazorWebApp.Pages.CustomerModel
@{
    ViewData["Title"] = "Customer";
    var customerList = Model.Customers;
}

<div class="text-center">
    <h1 class="display-6">Quản lý khách hàng</h1>
</div>

<div class="row">
    <div class="col-md-12 text-end">
        <button type="button" class="btn btn-primary" onclick="showAddCustomerModal();">
            Thêm
        </button>
    </div>
</div>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th class="card-title text-center">Id</th>
            <th class="card-title text-center">Name</th>
            <th class="card-title text-center">Email</th>
            <th class="card-title text-center">Phone</th>
            <th class="card-title text-center">Address</th>
            <th class="card-title text-center">Image</th>
            <th class="card-title text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in customerList)
        {
            <tr>
                <td class="text-center">@customer.CustomerId</td>
                <td class="text-center">@customer.CustomerName</td>
                <td class="text-center">@customer.CustomerEmail</td>
                <td class="text-center">@customer.CustomerPhone</td>
                <td class="text-center">@customer.CustomerAddress</td>
                <td class="text-center">@customer.CustomerImg</td>
                <td class="text-center">
                    <form method="post" asp-page-handler="Delete" asp-route-id="@customer.CustomerId" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <button type="button" class="btn btn-primary" onclick="showEditCustomerModal('@customer.CustomerId', '@customer.CustomerName', '@customer.CustomerEmail', '@customer.CustomerPhone', '@customer.CustomerAddress', '@customer.CustomerImg')">Edit</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Add Customer Modal -->
<div class="modal fade" id="addCustomerModal" tabindex="-1" aria-labelledby="addCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Add">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="customerModalLabel">Giao dịch khách hàng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="customerId">Id</label>
                                <input asp-for="Customer.CustomerId" class="form-control" id="customerId" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="customerName">Tên</label>
                                <input asp-for="Customer.CustomerName" class="form-control" id="customerName" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="customerAddress">Địa chỉ</label>
                                <input asp-for="Customer.CustomerAddress" class="form-control" id="customerAddress" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="customerPhone">Số điện thoại</label>
                                <input asp-for="Customer.CustomerPhone" class="form-control" id="customerPhone" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="customerEmail">Email</label>
                                <input asp-for="Customer.CustomerEmail" class="form-control" id="customerEmail" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="customerImg">Hình ảnh</label>
                                <input asp-for="Customer.CustomerImg" class="form-control" id="customerImg" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label>@Model.Message</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Customer Modal -->
<div class="modal fade" id="editCustomerModal" tabindex="-1" aria-labelledby="editCustomerModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Edit">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="editCustomerModalLabel">Chỉnh sửa khách hàng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Customer.CustomerId" id="editCustomerId" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editCustomerName">Tên</label>
                                <input asp-for="Customer.CustomerName" class="form-control" id="editCustomerName" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editCustomerAddress">Địa chỉ</label>
                                <input asp-for="Customer.CustomerAddress" class="form-control" id="editCustomerAddress" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editCustomerPhone">Số điện thoại</label>
                                <input asp-for="Customer.CustomerPhone" class="form-control" id="editCustomerPhone" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editCustomerEmail">Email</label>
                                <input asp-for="Customer.CustomerEmail" class="form-control" id="editCustomerEmail" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="editCustomerImg">Hình ảnh</label>
                                <input asp-for="Customer.CustomerImg" class="form-control" id="editCustomerImg" />
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label>@Model.Message</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        function showAddCustomerModal() {
            $('#addCustomerModal').modal('show');
        }

        function showEditCustomerModal(customerId, customerName, customerEmail, customerPhone, customerAddress, customerImg) {
            $('#editCustomerId').val(customerId);
            $('#editCustomerName').val(customerName);
            $('#editCustomerAddress').val(customerAddress);
            $('#editCustomerPhone').val(customerPhone);
            $('#editCustomerEmail').val(customerEmail);
            $('#editCustomerImg').val(customerImg);
            $('#editCustomerModal').modal('show');
        }
    </script>
}
